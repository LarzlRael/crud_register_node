<div class="row">
    {{#each notes}}
    <div class="col-md-3 pb-3">
        <div class="card  block">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}">
                    <i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <a href="/notes/delete/{{_id}}" class="btn btn-danger btn-block" onclick="return (confirm('Esta seguro de eliminar'))">Eliminar</a>
            </div>
            
        </div>
    </div>
    {{else}}
    <div class="col-md-3 m-auto">
        <div class="card card-body">
            <h3 class="text-center">No tienes notas</h3>
            <a href="/notes/add" class="btn btn-info">Agregar Notas</a>
        </div>
    </div>
    {{/each}}
</div>