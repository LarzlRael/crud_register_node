<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}" method="post">
                <div class="form-group">
                    <input type="text" name="title" id="" placeholder="Ingrese Su titulo" autofocus
                        class="form-control" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <input type="text" name="description" id="" class="form-control"
                        placeholder="Ingrese su descripcion" value="{{note.description  }}">
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar nota" class="btn btn-primary btn-block">
                </div>
            </form>
        </div>
    </div>
</div>