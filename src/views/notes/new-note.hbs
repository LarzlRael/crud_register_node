{{#each errors}}
<div class="alert alert-danger" role="alert">
    {{text}}
</div>
{{/each}}
<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                    <input type="text" name="title" id="" placeholder="Ingrese Su titulo" autofocus class="form-control"
                        value="{{title}}">
                </div>
                <div class="form-group">
                    <input type="text" name="description" id="" class="form-control"
                        placeholder="Ingrese su descripcion" value="{{description}}">
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar nota" class="btn btn-primary btn-block">
                </div>
            </form>
        </div>
    </div>
</div>